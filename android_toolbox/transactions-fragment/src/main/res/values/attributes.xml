<?xml version="1.0" encoding="utf-8"?>
<resources>

    <attr name="typeface" format="enum">
        <enum name="roboto_regular" value="0" />
        <enum name="roboto_bold" value="1" />
        <enum name="roboto_italic" value="2" />
        <enum name="roboto_bold_italic" value="3" />
        <enum name="caviar_dreams" value="4" />
        <enum name="caviar_dreams_bold" value="5" />
        <enum name="caviar_dreams_italic" value="6" />
        <enum name="caviar_dreams_bold_italic" value="7" />
    </attr>

    <declare-styleable name="CaviarTextView">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CaviarEditText">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CaviarButton">
        <attr name="typeface"/>
    </declare-styleable>

    <declare-styleable name="CaviarRadioButton">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="CaviarCheckedTextView">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="MaterialSpinner">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="DropdownSpinner">
        <attr name="typeface" />
    </declare-styleable>

    <declare-styleable name="TransactionItemView">
        <attr name="toTextSize" format="integer"/>
        <attr name="toTextColor" format="color"/>
        <attr name="toValueTextSize" format="integer"/>
        <attr name="toValueTextColor" format="color"/>
        <attr name="fromTextSize" format="integer"/>
        <attr name="fromTextColor" format="color"/>
        <attr name="fromValueTextSize" format="integer"/>
        <attr name="fromValueTextColor" format="color"/>
        <attr name="dateTextSize" format="integer"/>
        <attr name="dateTextColor" format="color"/>
        <attr name="stateTextSize" format="integer"/>
        <attr name="stateTextColor" format="color"/>
        <attr name="noteTextSize" format="integer"/>
        <attr name="noteTextColor" format="color"/>
        <attr name="amountTextSize" format="integer"/>
        <attr name="amountTextColor" format="color"/>
        <attr name="pendingDrawable" format="integer"/>
        <attr name="completeDrawable" format="integer"/>
    </declare-styleable>
</resources>
