<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="1dp"

    android:background="#F1F2F2"
    android:orientation="vertical">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >



        <FrameLayout
            android:id="@+id/relative2"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            >


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                android:background="@drawable/jjsc_circular_friend_list"
                android:src="@drawable/jjsc_profile_image"/>

            <View
                android:id="@+id/warning_cirlcle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:background="@drawable/jjsc_white_circle"
                />

            <ImageView
                android:id="@+id/jjsc_connection_state"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_home_friend"
                tools:ignore="ContentDescription,RtlHardcoded" />
        </FrameLayout>


        <LinearLayout
            android:paddingTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:id="@+id/jjsc_community_name"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginTop="13dp"
                android:ellipsize="end"
                android:gravity="start"
                android:paddingBottom="2dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:singleLine="true"
                android:text="Anna"
                android:textColor="#6D6F71"
                android:textSize="16sp"
                app:typeface="ROBOTO_REGULAR"
                tools:ignore="HardcodedText"

                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/relative2"
                android:layout_toEndOf="@+id/relative2" />

            <com.bitdubai.fermat_android_api.layer.definition.wallet.views.FermatTextView
                android:layout_width="match_parent"
                android:layout_height="18dp"
                app:typeface="CAVIAR_DREAMS_ITALIC_BOLD"
                android:gravity="center_vertical"
                android:paddingLeft="8dp"
                android:paddingStart="8dp"
                android:text="Online"
                android:textColor="#6D6F71"
                android:textSize="10sp"
                tools:ignore="HardcodedText,RtlSymmetry,SmallSp"
                android:id="@+id/view"
                android:layout_below="@+id/jjsc_community_name"
                android:layout_alignLeft="@+id/jjsc_community_name"
                android:layout_alignStart="@+id/jjsc_community_name" />


        </LinearLayout>









    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@drawable/jjsc_line_coloured"
        android:minHeight="0dp"
        android:minWidth="0dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"

        />


</LinearLayout>